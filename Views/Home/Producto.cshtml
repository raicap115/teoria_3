@{
    ViewData["Title"] = "Agregar productos";
}
@model Home

<div class="text-center" style="margin-top: 25px;">
    <h1 class="display-4">Agregar productos</h1>
</div>

<div asp-validation-summary="All"></div>

<div style="margin-top: 30px;">
    <form action="" method="POST">
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="nombre"></label>
                <input type="text" asp-for="nombre" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="url_foto"></label>
                <input type="text" asp-for="url_foto" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="descripcion"></label>
                <input type="text" asp-for="descripcion" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="precio"></label>
                <input type="text" asp-for="precio" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="celular"></label>
                <input type="text" asp-for="celular" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="lugar"></label>
                <input type="text" asp-for="lugar" class="form-control">
            </div>
        </div>
        <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="usuario"></label>
            <input type="text" asp-for="usuario" class="form-control">
        </div>
        </div>
        <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-dark">Registrar</button>
        </div>
    </form>
</div>
